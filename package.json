{
  "name": "@bombillazo/error-x",
  "description": "A simple and consistent error handling library for TypeScript applications. Provides type-safe error handling with great DX, solving common pain points like unknown error types, lost stack traces, async error handling, and error serialization. Isomorphic and framework-agnostic.",
  "version": "0.6.1",
  "author": "Hector Ayala <hran@bombillazo.com>",
  "dependencies": {
    "deepmerge-ts": "^7.1.5",
    "safe-stringify": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@microsoft/api-extractor": "^7.52.13",
    "@types/node": "^24.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "i18next": "^25.8.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/bombillazo/error-x#readme",
  "keywords": [
    "async",
    "error",
    "error-handling",
    "isomorphic",
    "promise",
    "type-safe",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "packageManager": "pnpm@10.14.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": "bombillazo/error-x.git",
  "scripts": {
    "api-docs": "api-extractor run --local",
    "api-docs:build": "pnpm build && mkdir -p ./etc && pnpm api-docs && pnpm api-docs:markdown && rm -rf ./etc ./temp",
    "api-docs:markdown": "npx @microsoft/api-documenter markdown -i temp -o docs",
    "bench": "vitest bench",
    "build": "tsup",
    "check": "biome check .",
    "dev": "tsup --watch",
    "format": "biome format --write . && biome check . --write",
    "lint": "biome lint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run check",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
